  <name>dashboard</name>
  <url>dashboard</url>
  <type>back-end</type>
  <actions>
    <action url="projects" page="projects" method="showProjects"/>
    <action url="projects/create"  method="createProject" />
    <action url="projects/description/update"  method="updateProjectDescription" />
    <action url="projects/comments/create"  method="addComment" />
